<Window x:Class="CinemaApp.WindowAddAuditorium"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaApp"
        mc:Ignorable="d"
        Title="Додати зал" Height="200" Width="500">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Номер залу"/>
            <TextBox x:Name="TextBoxAuditoriumNumber" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Кількість місць"/>
            <TextBox x:Name="TextBoxCountPlaces" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Кількість рядів"/>
            <TextBox x:Name="TextBoxCountRows" Width="100"/>
            <Label Content="*Кількість місць у кожному ряді має бути однакова"/>
        </StackPanel>
        <Button x:Name="ButtonAddAuditorium" Content="Додати зал" HorizontalAlignment="Center" Click="ButtonAddAuditorium_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
