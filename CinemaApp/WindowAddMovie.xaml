<Window x:Class="CinemaApp.WindowAddMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaApp"
        mc:Ignorable="d"
        Title="Додати фільм" Height="220" Width="265">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Назва"/>
            <TextBox x:Name="TextBoxMovieTitle" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Рік"/>
            <TextBox x:Name="TextBoxReleaseYear" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Жанр"/>
            <TextBox x:Name="TextBoxGenre" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Тривалість"/>
            <TextBox x:Name="TextBoxDuration" Width="100" Text="1:30:00"/>
        </StackPanel>
        <Button x:Name="ButtonAddMovie" Content="Додати фільм" HorizontalAlignment="Center" Click="ButtonAddMovie_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
